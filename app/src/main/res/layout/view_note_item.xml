<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/view_note_item_title"
        android:layout_width="@dimen/default_dim"
        android:layout_height="match_parent"
        android:textSize="@dimen/regular_text"
        android:textColor="@color/text_white"
        android:padding="10dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_note_item_remove"/>

    <ImageButton
        android:id="@+id/view_note_item_remove"
        android:contentDescription="@string/remove_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_remove_item"
        style="?android:attr/buttonBarButtonStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_note_item_title"
        android:background="#fff"/>

</android.support.constraint.ConstraintLayout>